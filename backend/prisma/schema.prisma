generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Doctorlogin {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())

model Doctor {
  id              Int       @id @default(autoincrement())
  email           String    @unique
  name            String?
  profileImage    String?

  experience      Int?
  rating          Float?    @default(0)
  specialization  String?
  bio             String?
   lat             Float?    // âœ… ADDED: latitude
  lng             Float? 

  createdAt       DateTime  @default(now())

  reports         Report[]  // ðŸ”¥ relation
}

model DoctorLogin {
  id           Int       @id @default(autoincrement())
  name         String?
  email        String    @unique
  supabaseId   String?   @unique
  password     String?

  lastLoginAt  DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model SymptomCheck {
  id         Int      @id @default(autoincrement())
  symptoms   String
  condition  String
  severity   String
  confidence String
  createdAt  DateTime @default(now())
}
model Report {
  id           Int       @id @default(autoincrement())
  title        String
  description  String?

  doctorId     Int
  doctor       Doctor    @relation(fields: [doctorId], references: [id], onDelete: Cascade)

  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

