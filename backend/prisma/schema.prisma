datasource db {
  provider = "postgresql"
 
}

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

model Doctor {
  id              Int       @id @default(autoincrement())
  email           String    @unique
  name            String?
  profileImage    String?

  experience      Int?
  rating          Float?    @default(0)
  specialization  String?
  bio             String?
   lat             Float?    // âœ… ADDED: latitude
  lng             Float? 

  createdAt       DateTime  @default(now())

  reports         Report[]  // ðŸ”¥ relation
}

model DoctorLogin {
  id           Int       @id @default(autoincrement())
  name         String?
  email        String    @unique
  supabaseId   String?   @unique
  password     String?

  lastLoginAt  DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Report {
  id           Int       @id @default(autoincrement())
  title        String
  description  String?

  doctorId     Int
  doctor       Doctor    @relation(fields: [doctorId], references: [id], onDelete: Cascade)

  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

